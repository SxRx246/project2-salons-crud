<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

    <body>

        <div class="site-wrap">

            <div class="site-mobile-menu">
                <div class="site-mobile-menu-header">
                    <div class="site-mobile-menu-close mt-3">
                        <span class="icon-close2 js-menu-toggle"></span>
                    </div>
                </div>
                <div class="site-mobile-menu-body"></div>
            </div>

            <%- include('../partials/navbar.ejs') %>

                <div class="slide-one-item home-slider owl-carousel">

                    <div class="site-blocks-cover inner-page-cover"
                        style="background-image: url(/styles/images/hero_bg_2.jpg);" data-aos="fade"
                        data-stellar-background-ratio="0.5">
                        <div class="container">
                            <div class="row align-items-center justify-content-center text-center">

                                <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                                    <h2 class="text-white font-weight-light mb-2 display-1">Edit Salon Details</h2>


                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="site-section bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7 mb-5">
                                <form action="/salons/<%= foundSalon._id %>?_method=PUT" class="p-5 bg-white"
                                    method="post">
                                    <h2 class="mb-4 site-section-heading">Edit Salon Details</h2>

                                    <div class="row form-group">
                                        <div class="col-md-6 mb-3 mb-md-0">
                                            <label class="text-black" for="name">Salon Name:</label>
                                            <input type="text" id="name" name="name" class="form-control"
                                                placeholder="Salon Name" value="<%= foundSalon.name%>">
                                        </div>
                                        <div class="col-md-6 mb-3 mb-md-0">
                                            <label class="text-black" for="location">Salon Location:</label>
                                            <input type="text" id="location" name="location" class="form-control"
                                                placeholder="Location" value="<%= foundSalon.location%>">
                                        </div>
                                    </div>

                                    <div class="row form-group">

                                        <div class="col-md-12">
                                            <label class="text-black" for="description">Description:</label>
                                            <input class="form-control" type="text" name="description" id="description"
                                                value="<%= foundSalon.description%>">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-6">
                                            <label class="text-black" for="openingTime">Openning Time:</label>
                                            <input type="time" id="openingTime" name="openingTime" class="form-control"
                                                min="00:00" max="24:00" required value="<%= foundSalon.openingTime%>" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="text-black" for="closingTime">Closing Time:</label>
                                            <input type="time" id="closingTime" name="closingTime" class="form-control"
                                                min="00:00" max="24:00" required value="<%= foundSalon.closingTime%>" />
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <label class="text-black" for="workingDays">Working Days</label>
                                            <select name="workingDays" id="workingDays" class="form-control" multiple>
                                                <% selectedDays.forEach((oneDay)=>{%>
                                                    <option <% if(oneDay.selected){ %>selected <%} %> value="<%=
                                                                oneDay.day %>">
                                                                <%= oneDay.day %>
                                                    </option>
                                                    <%}) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <div id="staffSection">
                                                <% foundSalon.staffs.forEach(staff=> { %>
                                                    <div class="staff">
                                                        <label class="text-black">Staff Name:</label>
                                                        <input class="form-control" type="text" name="staffName"
                                                            value="<%= staff.name %>" required>
                                                        <label class="text-black">Staff Speciality:</label>
                                                        <input class="form-control" type="text" name="staffSpeciality"
                                                            value="<%= staff.speciality %>" required>
                                                        <label class="text-black">yearsOfExperience:</label>
                                                        <input class="form-control" type="number"
                                                            name="yearsOfExperience"
                                                            value="<%= staff.yearsOfExperience %>" required>
                                                        <input class="form-control" type="hidden" name="staffId"
                                                            value="<%= staff._id %>">
                                                    </div>
                                                    <hr>
                                                    <% }) %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <button type="button" onclick="addStaff()"
                                                class="btn btn-primary py-2 px-4 text-white">Add Staff</button>
                                        </div>
                                    </div>


                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <div id="serviceSection">
                                                <% foundSalon.services.forEach(service=> { %>
                                                    <div class="service">
                                                        <label class="text-black">Service Name:</label>
                                                        <input class="form-control" type="text" name="serviceName"
                                                            value="<%= service.name %>" required>
                                                        <label class="text-black">Service Price:</label>
                                                        <input class="form-control" type="number" name="servicePrice"
                                                            value="<%= service.price %>" required>
                                                        <label class="text-black">Description:</label>
                                                        <input class="form-control" type="text"
                                                            name="serviceDescription" value="<%= service.description %>"
                                                            required>
                                                        <input class="form-control" type="hidden" name="serviceId"
                                                            value="<%= service._id %>">
                                                    </div>
                                                    <hr>
                                                    <% }) %>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <button type="button" onclick="addService()"
                                                class="btn btn-primary py-2 px-4 text-white">Add Service</button>
                                        </div>

                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <input type="submit" value="Update Salon"
                                                class="btn btn-primary py-2 px-4 text-white">
                                        </div>
                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="site-section">
                    <div class="container">
                        <div class="row text-center">
                            <div class="col-md-12">
                                <h2 class="mb-4 text-black">We want you to look fabulous</h2>
                                <p class="mb-0"><a href="/salons" class="btn btn-primary py-3 px-5 text-white">View All
                                        Salons</a></p>
                            </div>
                        </div>
                    </div>
                </div>

        </div>
        <%- include('../partials/footer.ejs') %>
            <%- include('../partials/scripts.ejs') %>


    </body>

</html>