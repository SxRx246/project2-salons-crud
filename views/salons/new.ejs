<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

  <body>

    <div class="site-wrap">

      <div class="site-mobile-menu">
        <div class="site-mobile-menu-header">
          <div class="site-mobile-menu-close mt-3">
            <span class="icon-close2 js-menu-toggle"></span>
          </div>
        </div>
        <div class="site-mobile-menu-body"></div>
      </div>

      <%- include('../partials/navbar.ejs') %>

        <div class="slide-one-item home-slider owl-carousel">

          <div class="site-blocks-cover inner-page-cover" style="background-image: url(/styles/images/hero_bg_2.jpg);"
            data-aos="fade" data-stellar-background-ratio="0.5">
            <div class="container">
              <div class="row align-items-center justify-content-center text-center">

                <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                  <h2 class="text-white font-weight-light mb-2 display-1">Adding Salon</h2>
                </div>
              </div>
            </div>
          </div>

        </div>

        <div class="site-section bg-light">
          <div class="container">
            <div class="row">
              <div class="col-md-7 mb-5">


                <form action="/salons" class="p-5 bg-white" method="post">
                  <h2 class="mb-4 site-section-heading">Add New Salon</h2>


                  <div class="row form-group">
                    <div class="col-md-6 mb-3 mb-md-0">
                      <label class="text-black" for="name">Salon Name</label>
                      <input type="text" id="name" name="name" class="form-control" placeholder="Salon Name">
                    </div>
                    <div class="col-md-6">
                      <label class="text-black" for="location">Salon Location</label>
                      <input type="text" id="location" name="location" class="form-control"
                        placeholder="Salon Location">
                    </div>
                    <div class="col-md-12">
                      <label class="text-black" for="description">Salon Description</label>
                      <textarea name="description" id="description" cols="30" rows="5" class="form-control"
                        placeholder="Write about you salon here..."></textarea>
                    </div>

                  </div>

                  <div class="row form-group">
                    <div class="col-md-6">
                      <label class="text-black" for="openingTime">Opening Time</label>
                      <input type="time" id="openingTime" name="openingTime" min="00:00" max="24:00" required
                        class="form-control" placeholder="Opening Time" />
                    </div>
                    <div class="col-md-6">
                      <label class="text-black" for="time">Closing Time</label>
                      <input type="time" id="closingTime" name="closingTime" min="00:00" max="24:00" required
                        class="form-control" placeholder="Closing Time" />
                    </div>
                  </div>

                  <div class="row form-group">
                    <div class="col-md-12">
                      <label class="text-black" for="workingDays">working Days</label>
                      <select id="workingDays" name="workingDays" class="form-control" multiple required>
                        <option value="Sun">Sun</option>
                        <option value="Mon">Mon</option>
                        <option value="Tue">Tue</option>
                        <option value="Wed">Wed</option>
                        <option value="Thu">Thu</option>
                        <option value="Fri">Fri</option>
                        <option value="Sat">Sat</option>
                      </select>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-md-12">
                      <input type="submit" onclick="addStaff()" value="Add Staff"
                        class="btn btn-primary py-2 px-4 text-white">
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-md-12">
                      <div id="staffSection">

                      </div>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-md-12">
                      <input type="button" onclick="addService()" value="Add Service"
                        class="btn btn-primary py-2 px-4 text-white">
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-md-12">
                      <div id="serviceSection">

                      </div>
                    </div>
                  </div>

                  <div class="row form-group">
                    <div class="col-md-12">
                      <input type="submit" value="Add Salon" class="btn btn-primary py-2 px-4 text-white">
                    </div>
                  </div>


                </form>
              </div>
            </div>
          </div>
        </div>


        <div class="site-section">
          <div class="container">
            <div class="row text-center">
              <div class="col-md-12">
                <h2 class="mb-4 text-black">We want you to look fabulous</h2>
                <p class="mb-0"><a href="/salons" class="btn btn-primary py-3 px-5 text-white">See Our Salons Now</a>
                </p>
              </div>
            </div>
          </div>
        </div>

    </div>
    <%- include('../partials/footer.ejs') %>
      <%- include('../partials/scripts.ejs') %>

  </body>

</html>