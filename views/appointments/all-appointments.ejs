<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

  <body>

    <div class="site-wrap">

      <div class="site-mobile-menu">
        <div class="site-mobile-menu-header">
          <div class="site-mobile-menu-close mt-3">
            <span class="icon-close2 js-menu-toggle"></span>
          </div>
        </div>
        <div class="site-mobile-menu-body"></div>
      </div>

      <%- include('../partials/navbar.ejs') %>


        <div class="slide-one-item home-slider owl-carousel">

          <div class="site-blocks-cover inner-page-cover" style="background-image: url(/styles/images/hero_bg_2.jpg);"
            data-aos="fade" data-stellar-background-ratio="0.5">
            <div class="container">
              <div class="row align-items-center justify-content-center text-center">

                <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                  <h2 class="text-white font-weight-light mb-4 display-1 line-height-1">Appointments</h2>

                  <p><a href="/appointments/new" class="btn btn-black py-3 px-5">Book New Appoitment</a></p>
                </div>
              </div>
            </div>
          </div>
        </div>


        <div class="site-section">
          <div class="container">

            <div class="row">
              <% allAppointments.forEach(appointment=> { %>
                <a href="/appointments/<%= appointment._id %>">
                  <div class="col-md-6 col-lg-4 text-center mb-5 mb-lg-5">
                    <div class="h-100 bg-light site-block-feature-7">
                      <div class="p-4 p-lg-5">

                        <h3 class="text-black h4" style="font-weight: bold;">Appointment</h3>
                        <p style="font-size: 20px; color:black; font-weight: bold;"> <i class="fas fa-calendar"
                            style="color: #000000; font-size: 24px;"></i> <strong
                            style="font-size: 20px; color:rgb(95, 184, 0); font-weight: bold;">
                            <%= new Date(appointment.date).toLocaleDateString() %>
                          </strong><br> <i class="fas fa-map-marker-alt" style="color: #000000; font-size: 24px;"></i>
                          <strong style="font-size: 20px; color:rgb(95, 184, 0); font-weight: bold;">
                            <%= appointment.salon ? appointment.salon.name : "Salon not assigned" %>
                          </strong></p>

                      </div>
                </a>
            </div>
          </div>
          <% }) %>
        </div>

    </div>
    </div>
    </div>
    <%- include('../partials/footer.ejs') %>

      <%- include('../partials/scripts.ejs') %>

  </body>

</html>